<% { %>
    <% const own = user.id === target.id %>
    <% const title = target.username.endsWith("'") ? target.username + "s posts" : target.username + "'s posts" %>

    <%- include('../partials/header', { options: { user }, title }); %>

    <div class="p-2 flex-grow-1">
        <h3 class="m-0"><%= own ? "Your posts" : title %></h3>

        <% if(own){ %>
            <%- include('../partials/post-form', { action: 'post', post: null, user }) %>
        <% } %>

        <%- include('../partials/post-list', { pagination: target.getPostsPagination(pageIndex), user }) %>
    </div>
<% } %>

<hr class="d-md-none">

<%- include('../partials/friends', { user, target: user }); %>
<%- include('../partials/footer'); %>