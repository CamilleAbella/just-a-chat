<%- include('../partials/header', { logged: false }) %>

<form action="login" method="POST" class="d-flex flex-column align-self-center">
    <h2 class="align-self-center"> Login </h2>
    <div class="form-group mx-5 mx-md-0">
        <input type="text" class="form-control" autofocus name="username" placeholder="Username" required>
    </div>
    <div class="form-group mx-5 mx-md-0">
        <input type="password" class="form-control" name="password" placeholder="Password" required>
    </div>
    <input type="submit" class="btn btn-primary align-self-center btn-round" value="Go">
</form>
<hr class="d-md-none">
<form action="subscribe" method="POST" class="d-flex flex-column align-self-center">
    <h2 class="align-self-center"> Subscribe </h2>
    <div class="form-group mx-5 mx-md-0">
        <input type="text" class="form-control" name="username" placeholder="Username" required>
    </div>
    <div class="form-group mx-5 mx-md-0">
        <input type="password" class="form-control" name="password" placeholder="Password" required>
    </div>
    <input type="submit" class="btn btn-primary align-self-center btn-round" value="Go">
</form>

