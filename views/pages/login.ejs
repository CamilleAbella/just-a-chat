<form action="/login" method="POST" class="form">
    <h2> Login </h2>
    <div class="group-column">
        <input class="input-text round-hover" type="text" maxlength="20" autofocus name="username" placeholder="Username" required>
        <input class="input-text round-hover" type="password" minlength="5" name="password" placeholder="Password" required>
    </div>
    <div class="group">
        <a href="/subscribe" class="btn round">Subscribe</a>
        <input type="submit" class="btn round" value="Go">
    </div>
</form>

