<%- include('../partials/header', { options: { user: null } }); %>

<form action="/sign-in" method="POST" class="form shadow">
    <h2 class="text-inlaid"> Sign-in </h2>
    <div class="group-column">
        <input class="input-text rect-hover shadow-inset" type="text" maxlength="20" name="username" placeholder="Username" required autofocus>
        <input class="input-text rect-hover shadow-inset" type="password" minlength="5" name="password" placeholder="Password" required>
        <input class="input-text rect-hover shadow-inset" type="email" name="email" placeholder="Email" required>
    </div>
    <div class="group">
        <a href="/login" class="btn rect-hover">Login</a>
        <input type="submit" class="btn rect-hover bg-dark-blue bg-blue-hover" value="Sign-in">
    </div>
</form>

<%- include('../partials/footer'); %>