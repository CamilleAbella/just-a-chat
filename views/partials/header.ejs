<%- include('head') %>
<div id="content" class="d-flex flex-column">
<header class="bg-dark text-white mb-4 py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <a href="/" class="muted-anchor d-block">
                <h1 class="h2 text-nowrap m-0 text-white"><%- site.name %></h1>
            </a>

            <% if (logged) { %>
                <%- include('search-bar', { options: null }); %>

                <div>
                    <a href="/logout" class="btn btn-secondary btn-round d-none d-md-block">
                        <span class=""> Logout </span>
                        <i class="now-ui-icons media-1_button-power ml-2"></i>
                    </a>
                    <a href="/logout" class="btn btn-icon btn-secondary btn-round d-block d-md-none">
                        <i class="now-ui-icons media-1_button-power"></i>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</header>
<main class="container flex-grow-1 d-md-flex justify-content-around">
