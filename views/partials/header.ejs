<%- include('head') %>
<body class="d-flex flex-column">
    <header class="bg-dark text-white">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="group">
                <a href="/" class="muted-anchor logo">
                    <img class="d-block" src="/brand/logo_white-dark.png" alt="logo" height="40" title="<%= site.name %>">
                </a>
                <a href="<%- site.github %>" target="_blank" class="btn"><span class="text-normal">Github</span></a>
                <a href="<%- site.discord %>" target="_blank" class="btn"><span class="text-normal">Discord</span></a>
            </div>


            <% if (options.user) { %>
                <%- include('search-bar', { options: null }); %>

                <div class="group">
                    <a href="/profile/<%= options.user.id %>" class="btn">
                        <span class="text-normal"><%= options.user.username %></span>
                    </a>
                    <a href="/logout" class="btn bg-red-hover">
                        <span class="text-normal"> Logout </span>
                    </a>
                </div>
            <% } %>
        </div>
    </header>
    <main class="bg-blue flex-grow-1 d-flex flex-column">
        <div class="container bg-white flex-grow-1">
