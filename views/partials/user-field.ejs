<%
const isAlreadyLinked = user.sentFriendRequests.some(u => u.id === target.id)
const isFriend = user.friends.some(u => u.id === target.id)
const isMe = target.id === user.id
%>
<div
        class="d-flex align-items-center justify-content-between px-2 py-0 m-0 <%= isMe ? 'text-primary' : '' %>"
        style="height: 25px; min-width: 120px">
    <div class="text-nowrap d-flex align-items-center">
        <i class="now-ui-icons users_single-02"></i>
        <a class="text-align-center m-0 p-0 px-1 mx-2 text-monospace muted-anchor" href="/wall/<%= target.id %>"><%= target.username %></a>
    </div>
    <% if (!isMe) { %>
        <a href="/link/<%= target.id %>" class="d-hover my-0 btn btn-sm btn-icon btn-round m-0 <%= isFriend ? 'btn-danger' : (isAlreadyLinked ? 'btn-dark' : 'btn-success') %>">
            <i class="now-ui-icons <%= isFriend ? 'ui-1_simple-delete' : (isAlreadyLinked ? 'ui-1_simple-delete' : 'ui-1_simple-add') %>"></i>
        </a>
    <% } %>
</div>